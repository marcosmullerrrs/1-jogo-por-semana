import random
import os

# ficha dos personagens
vida_jogador = 100
pontos_ex = 0
nivel = 0

vida_goblin = 30
vida_aranha = 40

# FunÃ§Ã£o para exibir o status do jogador
def exibir_status():
    print(f"\nHP: {vida_jogador}  Lvl: {nivel:02d}  Exp: {pontos_ex}/100")

# InÃ­cio do jogo
print("O seu objetivo Ã©: tornar-se um caÃ§ador de monstros.\n \n")
input("Pressione Enter para continuar...")  # Pausa para o jogador continuar

# Limpa a tela
os.system('cls' if os.name == 'nt' else 'clear')

print("Goblins foram vistos na Caverna do Bosque \n e vocÃª parte para lÃ¡ imediatamente e \n entra na caverna portando a sua espada \n e uma tocha. O cheiro horrÃ­vel do local diz que goblins estiveram ali. \nMais alguns passos e... sim, ali estÃ£o! \n PorÃ©m, assustados os Goblins correm e conseguem fugir. Um deles, porÃ©m, decide ficar e lutar")
input("\nPressione Enter para comeÃ§ar a batalha...")  # Pausa para o jogador continuar

# Limpa a tela
os.system('cls' if os.name == 'nt' else 'clear')

print("VocÃª ataca primeiro!")
exibir_status()  # Exibe o status do jogador

# enquanto o goblin ou o jogador nÃ£o morrerem
while vida_goblin > 0 and vida_jogador > 0:
    dado = random.randint(1, 6)
    
    if dado % 2 == 0:
        vida_goblin -= 10
        print("O ataque deu certo!")
    else:
        print("O Goblin defendeu o ataque!")
    
    # Goblin atacando
    dado = random.randint(1, 6)
    print(f"\nAgora Ã© o Goblin que ataca!")
    if dado % 2 == 0:
        vida_jogador -= 1
        print("O goblin acertou o ataque!")
    else:
        print("VocÃª conseguiu se defender!")
    
    if vida_goblin <= 0:
        break

# Pausa apÃ³s derrotar o goblin
input("\nPressione Enter para continuar...")

# Limpa a tela apÃ³s a batalha com o Goblin
os.system('cls' if os.name == 'nt' else 'clear')

# Atualiza a experiÃªncia
pontos_ex += 30
if pontos_ex >= 100:
    nivel += 1
    pontos_ex = 0

# Exibe a mensagem de vitÃ³ria
print("ğŸŠ ParabÃ©ns! VocÃª derrotou o seu primeiro monstro! E a aventura continua! Agora vocÃª vai Ã  taberna beber ğŸ¥¤ refrigerantes e contar a sua aventura!")
exibir_status()  # Exibe o status do jogador

# Pausa para o jogador apertar enter antes de continuar
input("\nPressione Enter para continuar...") 

# Limpa a tela apÃ³s a pausa
os.system('cls' if os.name == 'nt' else 'clear')

# Exibe a prÃ³xima parte da histÃ³ria
print("PorÃ©m, tudo o que Ã© bom dura pouco... e no dia seguinte, escuta rumores de que uma aranha gigante apareceu na borda da floresta. Voce parte para lÃ¡")
input("\nPressione Enter para continuar...")  # Pausa para o jogador continuar

# enquanto a aranha ou o jogador nÃ£o morrerem
while vida_aranha > 0 and vida_jogador > 0:
    dado = random.randint(1, 6)
    
    if dado % 2 == 0:
        vida_aranha -= 10
        print("O ataque deu certo!")
    else:
        print("A aranha defendeu o ataque!")
    
    # Aranha atacando
    dado = random.randint(1, 6)
    print(f"\nAgora Ã© a aranha que ataca!")
    if dado % 2 == 0:
        vida_jogador -= 1
        print("A aranha acertou o ataque!")
    else:
        print("VocÃª conseguiu se defender!")
    
    if vida_aranha <= 0:
        break

# Pausa apÃ³s derrotar a aranha
input("\nPressione Enter para continuar...")

# Limpa a tela apÃ³s a batalha com a aranha
os.system('cls' if os.name == 'nt' else 'clear')

# Atualiza a experiÃªncia
pontos_ex += 30
if pontos_ex >= 100:
    nivel += 1
    pontos_ex = 0

# Exibe a mensagem de vitÃ³ria
print("ğŸŠ ParabÃ©ns! VocÃª derrotou a aranha gigante! Agora vocÃª Ã© oficialmente um caÃ§ador de monstros, e vai Ã  taberna beber ğŸ¥¤ refrigerantes e contar a sua aventura!")
